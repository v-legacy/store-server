<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>



<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1><%= title %></h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/bank">Bank</a></li>
            <li class="breadcrumb-item active">Tambah</li>
          </ol>
        </div>
      </div>
    </div><!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <!-- <%- include ../../partials/message.ejs %> -->
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title"><%= title %></h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/bank/store" method="POST">
              <div class="card-body">
                <div class="form-group">
                  <label for="exampleInputEmail1">Nama Pemilik</label>
                  <input type="text" class="form-control <% if (alert.message.length > 0 && alert.message[0].hasOwnProperty('name')) { %>
                    is-invalid
                  <% } %>" id="name" name="name" placeholder="Input Owner Name">
                  <% if (alert.message.length > 0 && alert.message[0].hasOwnProperty('name') ) { %>
                  <p class="text-danger"><%= alert.message[0].name.msg %></p>
                  <% } %>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Nama Bank</label>

                  <input type="text" class="form-control <% if (alert.message.length > 0 && alert.message[0].hasOwnProperty('nameBank')) { %>
                    is-invalid
                  <% } %>" id="name" name="nameBank" placeholder="Input Bank Name">
                  <% if (alert && alert.message.length > 0 && alert.message[0].hasOwnProperty('nameBank')) { %>
                  <p class="text-danger"><%= alert.message[0].nameBank.msg %></p>
                  <% } %>
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">No Rekening</label>
                  <input type="text" class="form-control <% if (alert.message.length > 0 && alert.message[0].hasOwnProperty('noRekening')) { %>
                    is-invalid
                  <% } %>" id="name" name="noRekening" placeholder="Input Rekening Numbers">
                  <% if (alert.message.length > 0 && alert.message[0].hasOwnProperty('noRekening')) { %>
                  <p class="text-danger"><%= alert.message[0].noRekening.msg %></p>
                  <% } %>
                  <% console.log(alert.message); %>
                </div>
              </div>
              <!-- /.card-body -->

              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </form>
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>


<%- include ../../partials/footer.ejs %>
<%- include ../../partials/js.ejs %>